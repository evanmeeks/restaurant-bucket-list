{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true
  },
  "paths": {
    "@/*": ["src/*"],
    "core/*": ["../core/src/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
