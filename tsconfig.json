{
  "compilerOptions": {
    "baseUrl": "./", // Set the base directory for resolving non-relative module names
    "paths": {
      "@/*": ["packages/src/*"],
      "core/*": ["packages/core/src/*"]
    },
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.*/*", "packages/**/*.*/*", "src/api/__tests__/**/*.ts"],

  "exclude": ["node_modules"]
}
